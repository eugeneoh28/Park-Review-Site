<% include partials/header%>


<div class="container">
    <h1 style="text-align:center;">Create a new park</h1>
    <div style="width:30%; margin:30px auto">
        <form action="/parks" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="park[name]" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="park[image]" placeholder="Image Url">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="park[description]" placeholder="Give us a description!"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-default btn-block">Submit!</button>
            </div>
        </form>
        <a href="/parks">Go back to park</a>

    </div>
</div>
<% include partials/footer%>
